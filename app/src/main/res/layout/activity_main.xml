<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/BackgroundColor"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/Text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="KALKULATOR"
        android:textSize="100px"
        android:textColor="@color/white"
        android:fontFamily="monospace"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/Text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="BANGUN DATAR"
        android:textColor="@color/white"
        android:textSize="80px"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="898dp">


                    <ImageButton
                        android:id="@+id/btn1"
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="28dp"
                        android:background="@drawable/ic_persegi" />

                    <ImageButton
                        android:id="@+id/btn2"
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="200dp"
                        android:layout_marginTop="28dp"
                        android:background="@drawable/ic_persedgi_panjang" />

                    <ImageButton
                        android:id="@+id/btn3"
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="231dp"
                        android:background="@drawable/ic_segitiga" />

                    <ImageButton
                        android:id="@+id/btn4"
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="200dp"
                        android:layout_marginTop="231dp"
                        android:background="@drawable/ic_jajar_genjang" />

                    <ImageButton
                        android:id="@+id/btn5"
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="442dp"
                        android:background="@drawable/ic_trapesium" />

                    <ImageButton
                        android:id="@+id/btn6"
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="200dp"
                        android:layout_marginTop="442dp"
                        android:background="@drawable/ic_belah_ketupat" />

                    <ImageButton
                        android:id="@+id/btn7"
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="661dp"
                        android:background="@drawable/ic_lingkaran" />

                    <ImageButton
                        android:id="@+id/btn8"
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="200dp"
                        android:layout_marginTop="661dp"
                        android:background="@drawable/ic_layang_layang" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/btn_setting"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_baseline_back_24"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>